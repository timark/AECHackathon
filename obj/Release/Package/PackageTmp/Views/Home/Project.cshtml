@section scripts
{
    @Scripts.Render("~/bundles/AECHackathon")
    <script src="http://maps.google.com/maps/api/js?sensor=true"></script>
    <script src="/plugins/gmaps/gmaps.js"></script>
    <script src="/Scripts/jscoord.js"></script>
    <script>
        $(document).ready(function () {


            GetRecordSet();
        })

        function GetRecordSet() {

            initMap(403413.255415862, 281297.650437869)
        }

        function initMap(Easting, Northing) {
            var osRefCtr = new OSRef(parseFloat(Easting), parseFloat(Northing));
            var oslatlng = osRefCtr.toLatLng();

            var markerMap = new GMaps({
                el: '#building-location-map',
                lat: oslatlng.lat,
                lng: oslatlng.lng,
                mapTypeControlOptions: {
                    mapTypeIds: ["hybrid", "roadmap", "satellite", "terrain", "osm"]
                }
            });

            markerMap.addMapType("osm", {
                getTileUrl: function (coord, zoom) {
                    return "http://tile.openstreetmap.org/" + zoom + "/" + coord.x + "/" + coord.y + ".png";
                },
                tileSize: new google.maps.Size(256, 256),
                name: "OpenStreetMap",
                maxZoom: 18
            });


            markerMap.addMarker({
                lat: oslatlng.lat,
                lng: oslatlng.lng,
                title: 'Location',
                click: function (e) {
                    $.niftyNoty({
                        type: "info",
                        icon: "fa fa-info",
                        message: "building",
                        container: 'floating',
                        timer: 3500
                    });
                },
                infoWindow: {
                    content: '<div>medical Centre</div>'
                }
            });
            markerMap.setMapTypeId("osm");
        }
    </script>
}